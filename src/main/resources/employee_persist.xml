<persistence keyspace="bom" table="employees">
    <keyPersistence class="model.entities.EmployeesKeyClass" strategy="POJO">
        <partitionKey>
            <field name="id" column="id"/>
            <field name="name" column="name"/>
        </partitionKey>
        <clusterKey>
            <field name="datebirth" column="datebirth"/>
        </clusterKey>
    </keyPersistence>
    <valuePersistence class="model.entities.Employees" strategy="POJO">
        <field name="count" column="count"/>
    </valuePersistence>
</persistence>